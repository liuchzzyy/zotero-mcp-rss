# ==============================================================================
# Zotero MCP Environment Configuration
# ==============================================================================

# ==================== Core Runtime ====================
ENV_MODE=production
LOG_LEVEL=INFO
DEBUG=false
MCP_STDIO_KEEPALIVE=false
ZOTERO_SERVER_NAME=zotero-mcp
ZOTERO_ENABLE_SEMANTIC_SEARCH=true
ZOTERO_ENABLE_WORKFLOWS=true
ZOTERO_ENABLE_DATABASE_TOOLS=true
ZOTERO_ENABLE_COLLECTION_TOOLS=true

# ==================== Zotero API ====================
ZOTERO_LOCAL=true
ZOTERO_LIBRARY_ID=your_library_id_here
ZOTERO_LIBRARY_TYPE=user
ZOTERO_API_KEY=your_zotero_api_key_here

# ==================== Semantic Search ====================
# Local-only embedding is used (Chroma DefaultEmbeddingFunction)
# PDF extraction page cap is configured in ~/.config/zotero-mcp/config.json:
# semantic_search.extraction.pdf_max_pages

# ==================== LLM ====================
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com
# DeepSeek output token cap (chat/v3 <= 8192, reasoner <= 64000)
DEEPSEEK_MAX_TOKENS=8192
CLI_LLM_COMMAND=claude
CLI_LLM_TIMEOUT=300
ZOTERO_PRECREATE_DEDUP=true

# ==================== Metadata (OpenAlex) ====================
POLITE_POOL_EMAIL=your_email@example.com
OPENALEX_EMAIL=
OPENALEX_API_KEY=your_openalex_api_key_here
OPENALEX_API_BASE=https://api.openalex.org
API_TIMEOUT=45
OPENALEX_TIMEOUT=45
OPENALEX_MAX_REQUESTS_PER_SECOND=10
OPENALEX_USER_AGENT=

# ==================== Analysis Templates and Themes ====================
# Baseline templates exported to:
# - docs/templates/default_analysis_template.md
# - docs/templates/default_analysis_template_multimodal.md
ANALYSIS_TEMPLATE=None

# ==================== Elsevier API ====================
ELSEVIER_API_KEY=your_elsevier_api_key_here

# ==================== classify_shortterms.py ====================
# Zotero local storage root (e.g. C:/Users/yourname/Zotero/storage)
ZOTERO_STORAGE_PATH=C:/Users/yourname/Zotero/storage
# SI download directory for shortterms workflow
SHORTTERMS_SI_DIR=/path/to/project/.si-downloads/shortterms
# Blocked SI URLs log
SHORTTERMS_BLOCKED_FILE=/path/to/project/.si-downloads/shortterms_blocked.txt
# Collection keys are resolved dynamically by name at runtime (no hardcoding needed)
