# Zotero MCP Configuration Template
# Copy this file to .env and fill in your actual values

# ================================
# Zotero API Configuration
# ================================
# Get your API key from: https://www.zotero.org/settings/keys
ZOTERO_LIBRARY_ID=your_library_id_here
ZOTERO_API_KEY=your_api_key_here
ZOTERO_LIBRARY_TYPE=user

# Local vs Web API (set to "false" for GitHub Actions)
ZOTERO_LOCAL=false

# ================================
# AI/LLM Configuration
# ================================
# DeepSeek API (Recommended for batch analysis)
# Get key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# OpenAI API (Optional)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=https://api.openai.com/v1

# Gemini API (Optional)
# GEMINI_API_KEY=your_gemini_api_key_here
# GEMINI_MODEL=gemini-2.0-flash-exp

# ================================
# Semantic Search Configuration
# ================================
# Embedding model: default, openai, gemini
ZOTERO_EMBEDDING_MODEL=default

# For OpenAI embeddings
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# For Gemini embeddings
# GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# RSS Configuration
RSS_PROMPT="your_rss_prompt_here"

# ================================
# Gmail Configuration
# ================================
# Gmail OAuth Token (Recommended)
# Use the entire JSON content from token.json
# GMAIL_TOKEN_JSON='{"token": "..."}'

# Gmail Credentials (Recommended)
# Use the entire JSON content from gmail_credentials.json
# GMAIL_CREDENTIALS_JSON='{"installed":{...}}'

# ================================
# Advanced Configuration
# ================================
# Custom Zotero database path (optional)
# ZOTERO_DB_PATH=/path/to/zotero.sqlite

# PDF extraction limits (optional)
# ZOTERO_PDF_MAXPAGES=100
