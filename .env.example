# ==============================================================================
# Zotero MCP Environment Configuration
# ==============================================================================

# ==================== Core Runtime ====================
ENV_MODE=production
LOG_LEVEL=INFO
DEBUG=false
MCP_STDIO_KEEPALIVE=false
ZOTERO_SERVER_NAME=zotero-mcp
ZOTERO_ENABLE_SEMANTIC_SEARCH=true
ZOTERO_ENABLE_WORKFLOWS=true
ZOTERO_ENABLE_DATABASE_TOOLS=true
ZOTERO_ENABLE_COLLECTION_TOOLS=true

# ==================== Zotero API ====================
ZOTERO_LOCAL=true
ZOTERO_LIBRARY_ID=your_library_id_here
ZOTERO_LIBRARY_TYPE=user
ZOTERO_API_KEY=your_zotero_api_key_here

# ==================== Semantic Search ====================
ZOTERO_EMBEDDING_MODEL=default
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_EMBEDDING_MODEL=models/text-embedding-004
ZOTERO_PDF_MAXPAGES=10

# ==================== LLM ====================
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com
CLI_LLM_COMMAND=claude
CLI_LLM_TIMEOUT=300
ZOTERO_PRECREATE_DEDUP=true

# ==================== Metadata (OpenAlex) ====================
POLITE_POOL_EMAIL=your_email@example.com
OPENALEX_EMAIL=
OPENALEX_API_KEY=your_openalex_api_key_here
OPENALEX_API_BASE=https://api.openalex.org
API_TIMEOUT=45
OPENALEX_TIMEOUT=45
OPENALEX_MAX_REQUESTS_PER_SECOND=10
OPENALEX_USER_AGENT=

# ==================== Analysis Templates and Themes ====================
# Baseline templates exported to:
# - docs/templates/default_analysis_template.md
# - docs/templates/default_analysis_template_multimodal.md
ANALYSIS_QUESTIONS=["这篇论文的主要研究问题是什么？", "引用的文献是否最新、全面？以往文献有什么不足？", "本研究聚焦的问题、逻辑思路、可行性和可靠性如何？", "作者选题角度是否新颖？有什么价值？", "提出了什么新的科学问题？", "在制备方法上有什么创新？", "研究思路有何独特之处？", "使用了什么新的研究工具或技术？", "在理论方面有何贡献？", "关键的制备方法和步骤是什么？", "使用了哪些表征方法？主要结果是什么？", "关键性能数据和指标有哪些？", "作者提出的机制解释是什么？", "理论基础和模型是什么？", "这篇论文有什么优点和不足？"]
